{
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "moduleResolution": "bundler",
    "module": "esnext",
    "declaration": true,
    "outDir": "./dist"
  },
  "include": ["index.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
